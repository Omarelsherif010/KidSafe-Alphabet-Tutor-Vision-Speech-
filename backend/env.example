# API Keys for Speech-to-Speech Loop
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LiveKit Cloud Configuration
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
LIVEKIT_URL=wss://your-project.livekit.cloud

# Speech Processing Settings
TTS_PROVIDER=openai  # openai, google, or gtts
ASR_PROVIDER=openai  # openai, google, or speechrecognition
CONVERSATION_MODEL=gpt-4  # gpt-4, gpt-3.5-turbo, or claude-3

# App Settings
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
